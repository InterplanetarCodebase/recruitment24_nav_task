#:kivy 2.3.0
# navigation_gui.kv

BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    canvas.before:
        Color:
            rgba: 0.97, 0.91, 0.85, 1  # F9E8D9
        Rectangle:
            size: self.size
            pos: self.pos
    
    Label:
        text: 'Navigation GUI'
        halign: 'center'
        font_size: '30sp'
        size_hint_y: None
        height: '50sp'
        color: 0.18, 0.19, 0.31, 1

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5

            canvas.before:
                Color:
                    rgba: 0.96, 0.71, 0.53, 1  # #3B3486
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Label:
                text: 'Speed Adjustment'
                halign: 'center'
                valign: 'middle'
                font_size: '20sp'
                size_hint_y: 0.2
                height: '30sp'
                color: 0.18, 0.19, 0.31, 1

            Slider:
                id: slider
                min: 0
                max: 100
                value: 50
                on_value: app.on_slider_change(self.value)

            GridLayout:
                cols: 3
                spacing: 10

                Button:
                    text: ' '
                    size_hint: 1, 1
                    background_color: 0, 0.8, 0, 0
                Button:
                    text: 'Forward'
                    size_hint: 1, 1
                    on_press: app.forward()
                    background_color: 0.93, 0.45, 0.07, 1
                Button:
                    text: ' '
                    size_hint: 1, 1
                    background_color: 0, 0.8, 0, 0

                Button:
                    text: 'Yaw Left'
                    size_hint: 1, 1
                    background_color: 0.93, 0.45, 0.07, 1
                    on_press: app.left()
                Button:
                    text: 'Stop'
                    size_hint: 1, 1
                    background_color: 0.93, 0.45, 0.07, 1
                    on_press: app.stop()
                Button:
                    text: 'Yaw Right'
                    size_hint: 1, 1
                    background_color: 0.93, 0.45, 0.07, 1
                    on_press: app.right()
               
                Button:
                    text: ' '
                    size_hint: 1, 1
                    background_color: 0, 0.8, 0, 0
                Button:
                    text: 'Backward'
                    size_hint: 1, 1
                    on_press: app.backward()
                    background_color: 0.93, 0.45, 0.07, 1
                Button:
                    text: ' '
                    background_color: 0, 0.8, 0, 0

                


        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            height: '100sp'
            canvas.before:
                Color:
                    rgba: 0.96, 0.71, 0.53, 1 # #864AF9
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]
            Label:
                text: 'Video Unavailable'
                halign: 'center'
                valign: 'middle'
                color: 0.18, 0.19, 0.31, 1

    Image:
        source: 'logo.png'
        size_hint: None, None
        size: '60sp', '60sp'
        pos_hint: {'center_x': 0.5}

    

